<% content_for :title do %>
  <title>Edit Account Information | Trip Planner</title>
<% end %>

<div class="container devise-page">
  <div class="row">
    <div class="col-xs-12 text-center">
      <%= link_to root_path do %>
        <%= image_tag 'tp_inverted', class: 'img-responsive' %>
      <% end %>
    </div>
  </div>
  <div class="row devise-row">
    <div class="col-xs-12">
      <h1>Edit Account Information</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal', role: 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="emailicon"><i class="fa fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email' , html: {'aria-describedby' => 'emailicon'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="passwordicon"><i class="fa fa-unlock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter a new password or leave this blank' , html: {'aria-describedby' => 'passwordicon'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="passwordicon2"><i class="fa fa-unlock"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Retype new password' , html: {'aria-describedby' => 'passwordicon2'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="passwordicon3"><i class="fa fa-unlock"></i></span>
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Type your current password' , html: {'aria-describedby' => 'passwordicon3'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit "Update", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
        <%= link_to 'Delete my account permanently!', registration_path(resource_name), data: { confirm: 'This will delete your account permanently.' }, method: :delete, class: 'text-danger' %>
      <% end %>
    </div>
  </div>
</div>
