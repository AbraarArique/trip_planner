<% content_for :title do %>
  <title>Sign up | Trip Planner</title>
<% end %>

<div class="container devise-page">
  <div class="row">
    <div class="col-xs-12 text-center">
      <%= link_to 'http://abraararique.com/trip_planner' do %>
        <%= image_tag 'tp_inverted', class: 'img-responsive' %>
      <% end %>
    </div>
  </div>
  <div class="row devise-row">
    <div class="col-xs-12">
      <h1>Sign up</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="emailicon"><i class="fa fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email' , html: {'aria-describedby' => 'emailicon'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="passwordicon"><i class="fa fa-unlock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter a password' , html: {'aria-describedby' => 'passwordicon'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="passwordicon2"><i class="fa fa-unlock"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Retype your password' , html: {'aria-describedby' => 'passwordicon2'} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
        <%= link_to 'Already have an account? Login here!', new_user_session_path %>
      <% end %>
    </div>
  </div>
</div>
