<header>
  <div class="container-fluid">
    <div class="row no-gutter">
      <div class="col-xs-12">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to root_path, class: "navbar-brand" do %>
                <%= image_tag 'tp_small_inverted', alt: 'TP Logo', class: 'img-responsive' %>
                Trip Planner
              <% end %>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li>
                  <p class="navbar-btn">
                    <%= link_to new_trip_path, class: 'btn btn-info' do %>
                      <i class="fa fa-plus"></i>&nbsp;New Trip
                    <% end %>
                  </p>
                </li>
                <li>
                  <p class="navbar-btn">
                    <%= link_to new_pin_note_path, class: 'btn btn-info' do %>
                      <i class="fa fa-plus"></i>&nbsp;New Note
                    <% end %>
                  </p>
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <i class="fa fa-user"></i>&nbsp;My Account
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>&nbsp;Log out
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>
