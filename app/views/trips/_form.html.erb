<%= form_for @trip, html: {role: 'form', class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :start_date, class: 'form-control', placeholder: 'Start Date' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :end_date, class: 'form-control', placeholder: 'End Date' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Back', :back, class: 'btn btn-default' %>
      <%= f.submit 'Save', class: 'btn btn-info' %>
    </div>
  </div>
<% end %>
