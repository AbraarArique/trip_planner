<% content_for :title do %>
  <title>Reset Password | Trip Planner</title>
<% end %>

<div class="container devise-page">
  <div class="row">
    <div class="col-xs-12 text-center">
      <%= link_to 'http://abraararique.com/trip_planner' do %>
        <%= image_tag 'tp_inverted', class: 'img-responsive' %>
      <% end %>
    </div>
  </div>
  <div class="row devise-row">
    <div class="col-xs-12">
      <h1>Recover Your Password</h1>
      <%= form_tag recover_path, class: 'form-horizontal', role: 'form' do |f| %>
        <div class="form-group">
          <div class="col-sm-12 input-group">
            <span class="input-group-addon" id="emailicon"><i class="fa fa-envelope"></i></span>
            <%= email_field_tag :email, '', autofocus: true, class: 'form-control', placeholder: 'Enter your email' , 'aria-describedby' => 'emailicon' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= submit_tag "Send Recovery Email", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      <% end %>
      <%= link_to 'Log into your account', new_user_session_path %>
      <br>
      <%= link_to 'Don\'t have an account? Sign up for free!', new_user_registration_path %>
    </div>
  </div>
</div>
