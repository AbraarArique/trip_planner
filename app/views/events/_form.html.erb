<%= form_for [@trip, @event], html: {role: 'form', class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.time_field :time, class: 'form-control', placeholder: 'Time' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :date, class: 'form-control', placeholder: 'Date' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :duration, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :duration, class: 'form-control', placeholder: 'Duration' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :notes, class: 'form-control', placeholder: 'Notes' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Back', :back, class: 'btn btn-default' %>
      <%= f.submit 'Save', class: 'btn btn-info' %>
    </div>
  </div>
<% end %>
