<%= form_for [@trip, @event], html: {role: 'form', class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_field :date, class: 'form-control', placeholder: 'Date' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_field :time, class: 'form-control', placeholder: 'Time' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_field :duration, class: 'form-control', placeholder: 'Duration' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_field :place, class: 'form-control', placeholder: 'Place' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_area :notes, class: 'form-control', placeholder: 'Notes' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to 'Back', trip_event_path(@trip, @event), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
