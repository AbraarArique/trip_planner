<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= yield :title %>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <% if @while_layout %>
      <style>
        body {
          background: #ffffff;
        }
      </style>
    <% else %>
      <style>
        body {
          background: #337ab7;
        }
      </style>
    <% end %>
    <% if notice %>
      <div class="alert alert-success fade in alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger fade in alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
    <% if @while_layout %>
      <footer>
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-12 text-center">
              <br>
              <p class="text-muted">Copyright &copy; 2016 by Abraar Arique Diganto. All rights reserved.</p>
            </div>
          </div>
        </div>
      </footer>
    <% end %>
  </body>
</html>
