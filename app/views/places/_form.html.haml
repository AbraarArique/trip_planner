= form_for @place, url: trip_plan_place_path, html: { class: "form-horizontal", role: "form" } do |f|
  .row
    .col-xs-12.col-sm-6
      .form-group
        = f.label :name, class: "control-label col-xs-12"
        .col-xs-12
          = f.text_field :name, class: "form-control", placeholder: "Name"
      .form-group
        = f.label :location, class: "control-label col-xs-12"
        .col-xs-12
          = f.text_field :location, class: "form-control", placeholder: "Location"
          = f.text_field :lat
          = f.text_field :long
      .form-group
        = f.label :description, class: "control-label col-xs-12"
        .col-xs-12
          = f.text_area :description, class: "form-control", placeholder: "Description"
      .form-group
        = f.label :url, class: "control-label col-xs-12"
        .col-xs-12
          = f.text_field :url, class: "form-control", placeholder: "URL"
      .form-group
        .col-xs-12
          = link_to "Back", :back, class: "btn btn-default"
          = f.submit "Add Place To Your Plan", class: "btn btn-primary"